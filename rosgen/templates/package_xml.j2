<?xml version="1.0"?>
<package format="3">
  <name>{{ pkg.package_name }}</name>
  <version>{{ pkg.version }}</version>
  <description>{{ pkg.description or "ROS 2 package generated by rosgen" }}</description>

  {% for m in pkg.maintainers %}
  <maintainer{% if m.email %} email="{{ m.email }}"{% endif %}>{{ m.name }}</maintainer>
  {% endfor %}

  <license>{{ pkg.license }}</license>

  <!-- Build tool -->
  <buildtool_depend>ament_cmake</buildtool_depend>

  {% for dep in pkg.build_dependencies %}
  <build_depend>{{ dep }}</build_depend>
  {% endfor %}

  {% for dep in pkg.exec_dependencies %}
  <exec_depend>{{ dep }}</exec_depend>
  {% endfor %}

  {% if pkg.interfaces.messages or pkg.interfaces.services %}
  <member_of_group>rosidl_interface_packages</member_of_group>
  <build_depend>rosidl_default_generators</build_depend>
  <exec_depend>rosidl_default_runtime</exec_depend>
  {% endif %}

  <export>
    <build_type>{{ pkg.build_type }}</build_type>
  </export>
</package>
